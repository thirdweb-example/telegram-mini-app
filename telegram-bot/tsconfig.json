{
  "compilerOptions": {
    "target": "ES2022",
    "rootDir": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noEmit": false,
    "outDir": "./build",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "preserveWatchOutput": true
  },
  "include": [
    "src/**/*"
  ]
}
